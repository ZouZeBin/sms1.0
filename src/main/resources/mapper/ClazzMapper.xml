<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app02.dao.ClazzMapper">
	<!-- 查询所有班级信息 -->
	<select id="findAll" resultType="com.briup.app02.bean.Clazz">
		select * from poll_clazz
	</select>
	<!-- 通过ID查询班级信息 -->

	<select id="findById" parameterType="long"
		resultType="com.briup.app02.bean.Clazz">
		select * from poll_clazz where id = #{id}
	</select>

	<insert id="save" parameterType="com.briup.app02.bean.Clazz">
		insert into poll_clazz
		values(null,#{name},#{description},#{grade_id},#{user_id})
	</insert>

	<update id="update" parameterType="com.briup.app02.bean.Clazz">
		update poll_clazz
		set
		name=#{name},description=#{description},grade_id=#{grade_id},user_id=#{user_id}
		where id=#{id}
	</update>
	<delete id="deleteById" parameterType="long">
		delete from poll_clazz
		where id=#{id}
	</delete>


</mapper>